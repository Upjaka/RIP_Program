<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.IsCarLoadedDialogWindow"
        Title="Наутрный лист"
        Width="450" Height="120" CanResize="False"
        WindowStartupLocation="CenterScreen">
  
  <StackPanel Orientation="Vertical">
    <WrapPanel Height="70" HorizontalAlignment="Center" VerticalAlignment="Center">
      <TextBlock Text="Определите комерческое состояние. Вагон груженный?"
                 Focusable="False" Margin="0, 20, 0, 0"/>
    </WrapPanel>
    <DockPanel Background="LightGray" HorizontalAlignment="Stretch">
      <StackPanel DockPanel.Dock="Right" Orientation="Horizontal"
                  HorizontalAlignment="Right" Height="50">
        <Button x:Name="NoButton" Content="Нет" Click="No_Button_Click"
                Width="60" HorizontalContentAlignment="Center"/>
        <Button x:Name="YesButton" Content="Да" Click="Yes_Button_Click"
                Width="60" HorizontalContentAlignment="Center" Margin="20, 0, 20, 0"/>
      </StackPanel>
    </DockPanel>
  </StackPanel>
</Window>
