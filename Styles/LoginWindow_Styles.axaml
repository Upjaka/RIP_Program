<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="Grid#LoginGrid">
    <Setter Property="Margin" Value="20, 50, 20, 50"/>
  </Style>
  <Style Selector="TextBlock.GridElement">
    <Setter Property="Margin" Value="7, 5, 7, 5"/>
    <Setter Property="Padding" Value="0, 6, 0, 0"/>
  </Style>
  <Style Selector="TextBox.GridElement">
    <Setter Property="Margin" Value="7, 5, 7, 5"/>
  </Style>
  <Style Selector="TextBox.GridElement:disabled">
    <Setter Property="Background" Value="White"/>
  </Style>
  <Style Selector="ComboBox.GridElement">
    <Setter Property="Margin" Value="7, 5, 7, 5"/>
  </Style>
  <Style Selector="StackPanel#ControlPanel">
    <Setter Property="Margin" Value="90, 0, 30, 10"/>
  </Style>
  <Style Selector="StackPanel#ControlPanel > Button">
    <Setter Property="Margin" Value="30, 0, 20, 0"/>
  </Style>

</Styles>

