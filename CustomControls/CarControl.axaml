<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication2.CustomControls.CarControl">

  <UserControl.Styles>
    <Style Selector="Rectangle#CarRectangle.Empty">
      <Setter Property="Fill" Value="Red"/>
    </Style>
    <Style Selector="Rectangle#CarRectangle.Fixed">
      <Setter Property="Fill" Value="Black"/>
    </Style>
    <Style Selector="Rectangle#CarRectangle.Fixed.Loaded">
      <Setter Property="Fill" Value="Blue"/>
    </Style>
    <Style Selector="Border.Selected">
      <Setter Property="BorderThickness" Value="0,0,0,2"/>
    </Style>
  </UserControl.Styles>


  <Border x:Name="BorderWrapper" BorderBrush="Yellow">
    <Rectangle x:Name="CarRectangle" Classes="Empty"
             Width="7" Height="16"
             Margin="0, 0, 1, 2"/>
  </Border>

</UserControl>
