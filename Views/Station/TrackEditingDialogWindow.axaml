<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:AvaloniaApplication2.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.TrackEditingDialogWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Редактор района: ... путь: ..."
        Width="775" Height="375"
        MinWidth="770" MinHeight="300"
        WindowStartupLocation="CenterScreen">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <StackPanel x:Name="Wrapper" Orientation="Horizontal">
    <Border BorderBrush="Gray" BorderThickness="0, 1, 1, 1" VerticalAlignment="Top" HorizontalAlignment="Stretch">
      <ScrollViewer Height="300">
        <DataGrid x:Name="TrackGrid" AutoGenerateColumns="False" ItemsSource="{CompiledBinding CarsInfo}" Height="500">
          <DataGrid.Columns>
            <DataGridCheckBoxColumn Header="Отм."/>
            <DataGridTextColumn Header="№п/п" Binding="{CompiledBinding PPNumber}"/>
            <DataGridTextColumn Header="№вагона" Binding="{CompiledBinding CarNumber}"/>
            <DataGridCheckBoxColumn Header="Испр." Binding="{CompiledBinding IsFixed}"/>
            <DataGridTextColumn Header="Коды брака" Binding="{CompiledBinding DefectCodes}"/>
            <DataGridCheckBoxColumn Header="Загр." Binding="{CompiledBinding IsLoaded}"/>
            <DataGridTextColumn Header="Продукт" Binding="{CompiledBinding Product}"/>
            <DataGridTextColumn Header="Груз" Binding="{CompiledBinding Cargo}"/>
          </DataGrid.Columns>
        </DataGrid>
      </ScrollViewer>
    </Border>
    <Button Content="Выход" Click="ExitButton_Click" Margin="10, 0, 5, 0"/>
  </StackPanel>
</Window>
